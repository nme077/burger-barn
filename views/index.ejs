<%- include('./partials/header') %>
    <div class="header">
        <div class="navbar">
            <a href="#menu" class="nav-link">Menu</a>
            <div class="header-logo">
                <i class="fas fa-hamburger"></i>
            </div>
            <a href="#map" class="nav-link">Map</a>
        </div>
        <div class="jumbotron">
            <h6>Restaurant</h6>
            <div class="break"></div>
            <h1>Burger Barn</h1>
            <div class="break"></div>
            <hr class="rectangle">
            <div class="break"></div>
            <button class="order-btn">
                <a href="tel:(802)730-3441">Call to order</a>
            </button>
            <div class="break"></div>
            <div class="hours">Mon - Sat 11AM - 10PM, Sun: 12PM - 9PM</div>
            <div class="break"></div>
            <div class="continue-btn-container">
                <a href="#menu" class="continue-link">
                    <i class="fas fa-angle-down"></i>
                </a>
            </div>
            
        </div>
        
        <div class="social-links">
            <a href="https://www.facebook.com/BurgerbarnVT/" class="social-link" target="_blank">
                <i class="fab fa-facebook-f"></i>
            </a>
        </div>
        <hr class="header-line header-line-1">
        <hr class="header-line header-line-2">
        <hr class="header-line-vert header-line-vert-1">
        <hr class="header-line-vert header-line-vert-2">
        <hr class="header-line-vert-mid">
    </div>

    <div class="menu-wrapper">
        <div class="menu-container" id="menu">
            <div class="menu-heading">
                <h2>Our Menu</h2>
                <div class="break"></div>
                <hr class="rectangle rectangle-menu">
                <div class="break"></div>
                <h3>Local grass fed gourmet hamburgers & hand cut fries. <br> 15+ different cheeses, fried food, call ahead for take out. BYOB.</h3>
            </div>
            <div class="menu-selection">
                <h5 class="menu-select active-menu" id="hamburgers">Hamburgers</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="seafood">Seafood</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="fried">Fried Stuff</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="egg">Egg Sandwiches</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="veggie">Veggie Options</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="sandwiches">Sandwiches</h5>
                <div class="menu-hr"></div>
                <h5 class="menu-select" id="dogs">Dogs</h5>
            </div>
            <div class="menu-items-container">
                <div class="menu hamburgers active-menu-section">
                    <% menu.forEach(item => { if(item.category === 'hamburgers') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu seafood inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'seafood') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu fried inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'fried') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu egg inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'egg') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu veggie inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'veggie') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu sandwiches inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'sandwiches') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

                <div class="menu dogs inactive-menu-section">
                    <% menu.forEach(item => { if(item.category === 'dogs') {%>
                        <%- include('./layouts/menuItemLayout', {item: item}) %>
                    <% }}) %>
                </div>

            </div>
        </div>
    </div>

    <div class="photos-wrapper">
        <img src="/assets/images/burger-1.jpeg" alt="" class="gallery-photo gallery-photo-1">
            <img src="/assets/images/burger-3.jpeg" alt="" class="gallery-photo gallery-photo-2">
            <img src="/assets/images/burger-2.jpeg" alt="" class="gallery-photo gallery-photo-4">
    </div>

    <iframe
        id="map"
        width="100%"
        height="600px"
        style="border:0"
        loading="lazy"
        allowfullscreen
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCOpy1kHsjfQ1fhffc0j22beWG_8iuBE2o
            &q=Burger+barn+vermont">
    </iframe>

<%- include('./partials/footer') %>